<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.QuestionAdd">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:paddingHorizontal="50dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ques_add_head_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Add Question"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/ques_add_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:layout_marginTop="35dp"
                    android:ems="10"
                    android:hint="Type Question"
                    android:inputType="textMultiLine"
                     />

                <EditText
                    android:id="@+id/ques_add_answer_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Type Answer"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:layout_marginTop="15dp"/>


                <EditText
                    android:id="@+id/ques_add_false2_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="False Answer"
                    android:inputType="text"
                    android:layout_marginTop="15dp"
                    />
                <EditText
                    android:id="@+id/ques_add_false3_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="False Answer"
                    android:inputType="text"
                    android:layout_marginTop="15dp"

                    />
                <EditText
                    android:id="@+id/ques_add_false4_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="False Answer"
                    android:inputType="text"
                    android:layout_marginTop="15dp"
                    />
                <EditText
                    android:id="@+id/ques_add_solution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Solution Details"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:inputType="textMultiLine"
                    />
                <Button
                    android:id="@+id/ques_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"

                    android:paddingHorizontal="50dp"
                    android:text="Add" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>